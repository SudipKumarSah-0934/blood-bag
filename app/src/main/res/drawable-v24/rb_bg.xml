<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#1F043979"/>
            <solid android:color="#1F043979"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/Primary_Dark"/>
            <solid android:color="#1F043979"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/WhiteSmoke"/>
            <solid android:color="@color/WhiteSmoke"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>